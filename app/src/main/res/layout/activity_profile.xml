<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/dark_blue"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/tvProfileTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User Name"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/fredoka_bold"/>
    </LinearLayout>

    <!-- Background Profile Banner -->
    <ImageView
        android:id="@+id/profileBanner"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        android:layout_gravity="top"
        android:background="@color/light_gray"
        />

    <!-- Profile Card -->
    <LinearLayout
        android:id="@+id/profileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/bg_profile_card"
        android:elevation="8dp"
        android:padding="18dp">

        <!-- User Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/fredoka_bold"
                android:textColor="@color/mat_black"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tvSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign out"
                android:textSize="15sp"
                android:textColor="@color/error_red"
                android:fontFamily="@font/fredoka_bold"
                android:layout_marginTop="4dp"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Email Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_email"
                android:tint="@color/mat_black"
                android:contentDescription="Email"/>
            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pixelposse@gmail.com"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:textColor="@color/mat_black"
                android:fontFamily="@font/fredoka_regular"/>
        </LinearLayout>

        <!-- Phone Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_phone"
                android:tint="@color/mat_black"
                android:contentDescription="Phone"/>
            <TextView
                android:id="@+id/tvUserPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0758519048"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:textColor="@color/mat_black"
                android:fontFamily="@font/fredoka_regular"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Profile List Card -->
    <LinearLayout
        android:id="@+id/profileListCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/bg_profile_list_card"
        android:elevation="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <!-- About me -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_about_me"
                android:tint="@color/mat_black"
                android:contentDescription="About me"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="About me"
                android:textSize="16sp"
                android:textColor="@color/mat_black"
                android:fontFamily="@font/fredoka_regular"
                android:layout_marginStart="14dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_right_arrow"
                android:tint="@color/mat_black"
                android:contentDescription="Go"/>
        </LinearLayout>

        <!-- My Pets -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pets"
                android:tint="@color/mat_black"
                android:contentDescription="My Pets"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Pets"
                android:textSize="16sp"
                android:textColor="@color/mat_black"
                android:fontFamily="@font/fredoka_regular"
                android:layout_marginStart="14dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_right_arrow"
                android:tint="@color/mat_black"
                android:contentDescription="Go"/>
        </LinearLayout>

        <!-- Add Device -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add_device"
                android:tint="@color/mat_black"
                android:contentDescription="Add Device"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Device"
                android:textSize="16sp"
                android:textColor="@color/mat_black"
                android:fontFamily="@font/fredoka_regular"
                android:layout_marginStart="14dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_right_arrow"
                android:tint="@color/mat_black"
                android:contentDescription="Go"/>
        </LinearLayout>

        <!-- Favorite Vet -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_favorite_vet"
                android:tint="@color/mat_black"
                android:contentDescription="Favorite Vet"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Favorite Vet"
                android:textSize="16sp"
                android:textColor="@color/mat_black"
                android:fontFamily="@font/fredoka_regular"
                android:layout_marginStart="14dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_right_arrow"
                android:tint="@color/mat_black"
                android:contentDescription="Go"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>