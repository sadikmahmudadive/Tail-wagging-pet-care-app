<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A5AD9ED" /> <!-- Light background -->
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#DDDDDD" /> <!-- Light gray border -->
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

</selector>
